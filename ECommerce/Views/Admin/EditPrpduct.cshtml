@model ECommerce.Entity.TB_Product

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "EditPrpduct";
}
 

<div id="contact-form-overlay-mini" class="clearfix" style="float: left">

    <div class="fancy-title title-dotted-border">
        <h3>Recharge Mobile</h3>
        @ViewBag.Error
    </div>

    <div id="contact-form-result" data-notify-type="success" data-notify-msg="<i class=icon-ok-sign></i> Message Sent Successfully!"></div>

    <!-- Contact Form
                    ============================================= -->
    @*<form class="nobottommargin" id="template-contactform" name="template-contactform" action="/Home/Index" method="post">*@
    @using (Html.BeginForm())
    {

        <div class="clear"></div>

        <div class="col_full">
            <label for="template-contactform-phone">Product Id</label>
            @Html.HiddenFor(model => model.TB_ProductID)
            @Html.TextBoxFor(x => x.ProductId, new { @class = "sm-form-control numberonly" })
            @Html.ValidationMessageFor(m => m.ProductId)
            @*<input type="text" id="phone" name="phone" value="" class="sm-form-control"/>*@
        </div>

        <div class="col_full">
            <label for="template-contactform-service">Price</label>
            @Html.TextBoxFor(x => x.Product_Price, new { @class = "sm-form-control numberonly" })
        </div>
        <div class="col_full">
            <label for="template-contactform-phone">Product Name</label>
            @Html.TextBoxFor(x => x.Product_Name, new { @class = "sm-form-control numberonly disabled" })           
        </div>
        <div class="col_full">
            <label for="template-contactform-phone">Active</label>
            @{
   List<SelectListItem> listItems= new List<SelectListItem>();
   listItems.Add(new SelectListItem
        {
          Text = "true",
          Value = "true"
        });
   listItems.Add(new SelectListItem
        {
            Text = "false",
            Value = "false" 
        });
   
       
}

            @Html.DropDownListFor(x=>x.IsActive,listItems, new { @class = "sm-form-control numberonly" })
           @* <select id="ISACTIVE" name="ISACTIVE" class="sm-form-control">
                <option value="true" selected="@Model.IsActive == 'true' ? 'true':'false'">true</option>
                <option value="false" selected="@Model.IsActive == 'false' ? 'true':'false'">false</option>
            </select>*@
        </div>
        
        
        <div class="col_full">
            <button class="button button-3d nomargin" type="submit" id="template-contactform-submit" name="template-contactform-submit" value="submit">Submit</button>
        </div>

@*</form>*@
    }
</div>

