@{
    ViewBag.Title = "ForgotPassword";
}
 

<div id="contact-form-overlay" class="clearfix" style="float: left">

    <div class="fancy-title title-dotted-border">
        <h4>Please type in your mail address. We will send you your account details.</h4>
     
    </div>

    <div id="contact-form-result" data-notify-type="success" data-notify-msg="<i class=icon-ok-sign></i> Message Sent Successfully!"></div>

    <!-- Contact Form
                    ============================================= -->
    @*<form class="nobottommargin" id="template-contactform" name="template-contactform" action="/Home/Index" method="post">*@
    @using (Html.BeginForm())
    {
        @ViewBag.Error
        <div class="clear"></div>

        <div class="col_full">
            <label for="template-contactform-phone" style="float: left;margin-right: 52px;">Email</label>            
            
            <input type="text" id="email" name="email" value="" class="sm-form-control" required style="width:250px"/>
        </div>
        <div class="col_full" style="margin-left: 96px;margin-top: 20px;">
            <button class="button button-3d nomargin" type="submit" id="template-contactform-submit" name="template-contactform-submit" value="submit">Submit</button>
        </div>
        @ViewBag.Message
 
    }
</div>
<div id="contact-form-overlay-mini" class="clearfix" style="float: left;margin-left: 37px;">

    <div class="fancy-title title-dotted-border">
        <h4>Need Help ?</h4>
     
    </div>

    <div id="contact-form-result" data-notify-type="success" data-notify-msg="<i class=icon-ok-sign></i> Message Sent Successfully!"></div>
    <a href="~/Home/ContactUs">Contact Our Customer Support</a>
     
</div>
